@model MidTest.Net.Data.CauThu

@{
    ViewData["Title"] = "Thêm mới cầu thủ";
}

<h1>Thêm mới</h1>

<h4>Cầu thủ</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TenCauThu" class="control-label"></label>
                <input asp-for="TenCauThu" class="form-control" />
                <span asp-validation-for="TenCauThu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoAo" class="control-label"></label>
                <input asp-for="SoAo" class="form-control" />
                <span asp-validation-for="SoAo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdViTri" class="control-label"></label>
                <select asp-for="IdViTri" class ="form-control" asp-items="ViewBag.IdViTri"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdDoiBong" class="control-label"></label>
                <select asp-for="IdDoiBong" class ="form-control" asp-items="ViewBag.IdDoiBong"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở về danh sách</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
