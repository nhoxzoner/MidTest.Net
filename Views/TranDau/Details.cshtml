@model MidTest.Net.Data.TranDau

@{
    ViewData["Title"] = "Chi tiết trận đấu";
}

<h1>Chi tiết trận đấu</h1>

<div>
    <h4>Trận đấu</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SoBanThangA)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SoBanThangA)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SoBanThangB)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SoBanThangB)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ThoiGian)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ThoiGian)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DoiA)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DoiA.TenDoi)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DoiB)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DoiB.TenDoi)
        </dd>
    </dl>
</div>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Số bàn thắng
                </th>
                <th>
                    Cầu thủ
                </th>
                <th>
                    Trận đấu
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ChiTietTranDau)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoBanThang)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CauThu.TenCauThu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TranDau.TenTranDau)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Sửa</a> |
    <a asp-action="Index">Trở về danh sách</a>
</div>
